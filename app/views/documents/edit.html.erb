<!-- Validation failure messages -->
<% if @document.errors.any? %>
  <% @document.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header container">
  <h3>Edit Tax Document received from <%= @document.name %></h3>
</div>

<div class="row container">
  <div class="col-md-12">
    <form action="/update_document/<%= @document.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @document.name %>">
      </div>

      <!-- Label and input for type -->

      <!-- Label and input for user_id -->

      <button class="btn btn-warning">
        Update Document
      </button>
      or
      <a href="/documents/<%= @document.id %>">Cancel</a>
    </form>
  </div>
</div>
