<div class="page-header">
  <h1>
    Document Types
    <a href="/documenttypes/new" class="btn btn-lg btn-success">New Document Type</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @documenttypes.each do |documenttype| %>
      <tr>
        <td><%= documenttype.name %></td>
        <td>
          <a href="/documenttypes/<%= documenttype.id %>" class="btn btn-primary">Show</a>
          <a href="/documenttypes/<%= documenttype.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_documenttype/<%= documenttype.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
